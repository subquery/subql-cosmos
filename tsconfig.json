{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022"],
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    "paths": {
      "@subql/common-cosmos": ["packages/common-cosmos/src"],
      "@subql/common-cosmos/*": ["packages/common-cosmos/src/*"],
      "@subql/types-cosmos": ["packages/types/src"],
      "@subql/types-cosmos/*": ["packages/types/src/*"]
    },
    "skipLibCheck": true,
    "strict": true
  },
  "references": [
    {"path": "packages/common-cosmos"},
    {"path": "packages/node"},
    {"path": "packages/node-core"},
    {"path": "packages/types"}
  ],
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules/**"],
  "typeRoots": ["./node_modules/@types"]
}
